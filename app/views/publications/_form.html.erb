<%= form_with(model: @publication, local: true, html: { multipart:true }) do |form| %>
  <% if publication.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(publication.errors.count, "error") %> prohibited this publication from being saved:</h2>

      <ul>
        <% publication.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :utilisateur_id, style: "display: block" %>
    <%= form.collection_select :utilisateur_id, Utilisateur.order(:surnom), :id, :surnom, prompt:"Choisissez un utilisateur" %>
  </div>

  <div>
    <%= form.label :caption, style: "display: block" %>
    <%= form.text_area :caption %>
  </div>

  <div>
    <%= form.label :media %>
    <%= form.file_field :media %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
