<%= form_with(model: notification) do |form| %>
  <% if notification.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(notification.errors.count, "error") %> prohibited this notification from being saved:</h2>

      <ul>
        <% notification.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :utilisateur_id, style: "display: block" %>
    <%= form.collection_select :utilisateur_id, Utilisateur.order(:surnom), :id, :surnom, prompt:"Choisissez un utilisateur" %>
  </div>

  <div>
    <%= form.label :source_utilisateur_id, style: "display: block" %>
    <%= form.collection_select :source_utilisateur_id, Utilisateur.order(:surnom), :id, :surnom, prompt:"Choisissez un utilisateur" %>
  </div>

  <div>
    <%= form.label :publication_id, style: "display: block" %>
    <%= form.collection_select :publication_id, Publication.order(created_at: :desc), :id, :description, prompt:"Choisissez un publication" %>
  </div>

  <div>
    <%= form.label :commentaire_id, style: "display: block" %>
    <%= form.collection_select :commentaire_id, Commentaire.order(:publication_id, created_at: :desc), :id, :information, prompt:"Choisissez un commentaire" %>
  </div>

  <div>
    <%= form.label :type, style: "display: block" %>
    <%= form.text_field :type %>
  </div>

  <div>
    <%= form.label :lu, style: "display: block" %>
    <%= form.check_box :lu %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
